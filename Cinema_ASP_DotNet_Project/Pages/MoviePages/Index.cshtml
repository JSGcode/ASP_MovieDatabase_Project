@page
@model Cinema_ASP_DotNet_Project.Pages.MoviePages.IndexModel

@{
    ViewData["Title"] = "Movie Library";
}
<head>
    <style>
        html {
            background: rgb(142, 185, 255);
        }

        body {
            background: rgb(142, 185, 255);
        }

        .personal-header {
            background: rgb(142, 185, 255);
        }

        .personal-container {
            border: 1px solid rgb(128, 128, 128);
            background: white;
            padding: 20px;
        }
        hr{
            visibility:hidden;
        }
    </style>
</head>

<body>
    <div class="personal-container">
        <h2>Movie Database</h2>
        <p>
            <a asp-page="Create">Create New</a>
        </p>
        <table class="table">
            <thead class="personal-header">
                <tr>
                    <th>
                        Movie Title
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        Year Of Release
                    </th>
                    <th>
                        Age Rating
                    </th>
                    <th>
                        Director
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Movies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MovieTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre.Genres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.YearOfRelease.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AgeRating.Rating)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Director.TheDirectors)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.MovieId">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.MovieId">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.MovieId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>


