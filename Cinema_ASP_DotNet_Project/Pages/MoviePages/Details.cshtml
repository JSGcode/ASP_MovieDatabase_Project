@page
@model Cinema_ASP_DotNet_Project.Pages.MoviePages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movies</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Movie Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movies.MovieTitle)
        </dd>
        <dt>
            Genre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movies.Genre.Genres)
        </dd>
        <dt>
            Year Of Release
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movies.YearOfRelease.Year)
        </dd>
        <dt>
            Age Rating
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movies.AgeRating.Rating)
        </dd>
        <dt>
            Director
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movies.Director.TheDirectors)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movies.MovieId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
